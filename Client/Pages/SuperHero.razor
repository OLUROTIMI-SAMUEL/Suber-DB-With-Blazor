@page "/superhero/{id:int}"
@inject ISuperHeroService SuperHeroService

@if (hero == null)
{
    <span>Hero is Loading...</span>

}
else
{
<h3>This is @hero.HeroName, also called @hero.FirstName @hero.LastName.</h3>
<span>This hero belongs to @hero.Comic.Name.</span>
}



@code {
    [Parameter]
    public int Id { get; set; }

    SuperDB.Shared.SuperHero hero =null;
    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("This is the Id ->" + Id);
        hero = await SuperHeroService.GetSuperHero(Id);

    }
}

<!--So in line 1 we added our page directive "superhero" and page parameter "{id}",  So in line 2 we injected our superhero service -->